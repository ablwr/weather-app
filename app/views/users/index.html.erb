<div class="wrapper">

  <h1>Need an umbrella?</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
<p>Listing users</p>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <%= link_to user.name, user %> -- 
         <%= link_to 'Edit', edit_user_path(user) %> | 
         <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

</div>
